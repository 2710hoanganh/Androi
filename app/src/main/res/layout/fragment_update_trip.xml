<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/trip_update_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".update_trip">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/trip_update_destination_Label"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="48dp"
        android:text="Destination"
        android:textSize="15sp"
        app:layout_constraintEnd_toStartOf="@+id/trip_update_destination"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/trip_update_name_Label" />

    <EditText
        android:id="@+id/trip_update_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="25dp"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/trip_update_name_Label"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/trip_update_destination"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="25dp"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/trip_update_destination_Label"
        app:layout_constraintTop_toBottomOf="@+id/trip_update_name" />

    <TextView
        android:id="@+id/trip_update_name_Label"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="28dp"
        android:text="Trip Name"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/trip_update_date_Label"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="36dp"
        android:text="Date"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/trip_update_destination_Label" />

    <EditText
        android:id="@+id/trip_update_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="25dp"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/trip_update_date_Label"
        app:layout_constraintTop_toBottomOf="@+id/trip_update_destination" />

    <TextView
        android:id="@+id/trip_update_description_Label"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="36dp"
        android:text="Description"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/trip_update_date_Label" />

    <EditText
        android:id="@+id/trip_update_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="25dp"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/trip_update_description_Label"
        app:layout_constraintTop_toBottomOf="@+id/trip_update_date" />

    <TextView
        android:id="@+id/trip_update_accommodation_Label"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="28dp"
        android:text="Accommodation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/trip_update_description_Label" />

    <EditText
        android:id="@+id/trip_update_accommodation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="25dp"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/trip_update_accommodation_Label"
        app:layout_constraintTop_toBottomOf="@+id/trip_update_description" />

    <TextView
        android:id="@+id/trip_update_vehicle_Label"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="44dp"
        android:text="Vehicle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/trip_update_accommodation_Label" />

    <EditText
        android:id="@+id/trip_update_vehicle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="25dp"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/trip_update_vehicle_Label"
        app:layout_constraintTop_toBottomOf="@+id/trip_update_accommodation" />

    <Switch
        android:id="@+id/update_risk_assessment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginTop="28dp"
        android:text="Required Risk Assessment"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/trip_update_vehicle"
        app:layout_constraintHorizontal_bias="0.601"
        app:layout_constraintStart_toStartOf="@+id/trip_update_vehicle_Label"
        app:layout_constraintTop_toBottomOf="@+id/trip_update_vehicle"
        tools:ignore="TouchTargetSizeCheck" />

    <Button
        android:id="@+id/btn_update_trip2"
        android:layout_width="219dp"
        android:layout_height="62dp"
        android:layout_marginTop="16dp"
        android:text="Update"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/update_risk_assessment" />

</androidx.constraintlayout.widget.ConstraintLayout>